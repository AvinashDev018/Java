import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
        Scanner in=new Scanner(System.in);
        String name=in.next();
        int fol=in.nextInt();
        int post=in.nextInt();
        float hour=in.nextFloat();
        System.out.println("My name is "+ name +", my Instagram has "+fol+" followers, "+"I have posted "+post+" posts,"+" and I use Instagram for "+hour+" hours daily.");
    }
}
